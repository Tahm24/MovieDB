<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="/public/register.css">
</head>
<body>
    <!-- Add the image directly to the HTML -->
    <div class="background-image">
        <img src="/public/images/Mbg.jpeg" alt="Background" class="bg-image">
    </div>

    <!-- Navigation Bar -->
    <nav class="navbar">
        <div class="nav-container">
            <a href="/" class="nav-logo">MovieDB</a>
            <ul class="nav-links">
                <li><a href="/about">About</a></li>
                <li><a href="/users/login">Login</a></li>
            </ul>
        </div>
    </nav>

    <!-- Register Form -->
    <div class="register-container">
        <h1>Register</h1>
        <form class="register-form" action="/users/registered" method="POST">
            <label for="email">Email:</label>
            <input type="text" id="email" name="email" required>

            <label for="username">Username:</label>
            <input type="text" id="username" name="username" required>

            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>

            <input type="submit" value="Register">
        </form>
    </div>
</body>
</html>
